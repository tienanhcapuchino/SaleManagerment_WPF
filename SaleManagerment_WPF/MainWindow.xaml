<Window x:Class="SaleManagerment_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaleManagerment_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="109,175,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="109,217,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbUsername" HorizontalAlignment="Left" Margin="202,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="tbPassword" HorizontalAlignment="Left" Margin="202,221,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btLogin" Content="Login" HorizontalAlignment="Left" Margin="229,265,0,0" VerticalAlignment="Top" Click="btLogin_Click"/>
        <Label Content="Please login to use services!" HorizontalAlignment="Left" Margin="103,56,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
